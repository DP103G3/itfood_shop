<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:singleLine="true"
        android:text="一週內"
        android:textSize="14sp"
        android:theme="@style/Theme.MaterialComponents"
        app:backgroundTint="@color/comment_select_time_color_list"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:singleLine="true"
        android:text="一個月內"
        android:textSize="14sp"
        android:theme="@style/Theme.MaterialComponents"
        app:backgroundTint="@color/comment_select_time_color_list"
        app:layout_constraintTop_toBottomOf="@+id/btWeek" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:singleLine="true"
        android:text="一年內"
        android:textSize="14sp"
        android:theme="@style/Theme.MaterialComponents"
        app:backgroundTint="@color/comment_select_time_color_list"
        app:layout_constraintTop_toBottomOf="@+id/btMonth" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:singleLine="true"
        android:text="過去所有"
        android:textSize="14sp"
        android:theme="@style/Theme.MaterialComponents"
        app:backgroundTint="@color/comment_select_time_color_list"
        app:layout_constraintTop_toBottomOf="@id/btYear" />


</androidx.constraintlayout.widget.ConstraintLayout>